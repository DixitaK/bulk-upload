<h1>List</h1>
<h4><%=
  link_to 'Download as Excel',
  items_path(format: :xlsx)
%></h4>
<h3><%=
  link_to 'Upload from Excel',
  new_items_import_path
%></h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Sr No.</th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.srn %></td>
      </tr>
    <% end %>
  </tbody>
</table>
